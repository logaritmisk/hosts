#!/bin/bash


_hosts_usage() {
  cat <<EOF
Usage: `basename $0` command
   edit   manage hosts file
   list   show all hosts

EOF

  return 1
}

_hosts_action_edit() {
  sudo $EDITOR /etc/hosts

  return $?
}

_hosts_action_list() {
  cat /etc/hosts | awk '/^[^#]/{print $0}'

  return $?
}


case ${1:-edit} in
  edit) _hosts_action_edit;;
  list) _hosts_action_list;;
  *)    _hosts_usage;;
esac

exit $?
