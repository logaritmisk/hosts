#!/bin/bash


function _hosts_usage() {
  cat <<EOF
Usage: `basename $0` command
   edit   manage hosts file
   list   show all hosts

EOF
}

function _hosts_action_edit() {
  sudo $EDITOR /etc/hosts
}

function _hosts_action_list() {
  cat /etc/hosts | awk '/^[^#]/{print $0}'
}


readonly ACTION=${1:-edit}

case $ACTION in
  edit) _hosts_action_edit;;
  list) _hosts_action_list;;
  *) _hosts_usage;;
esac
